generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id                           String          @id @default(cuid())
  name                         String
  address                      String?         @db.Text
  phone                        String?
  email                        String?
  deliveryType                 DeliveryType    @default(SCHOOL_DELIVERY)
  password                     String          @unique // Veli giris sifresi (okul bazli)
  directorName                 String?
  directorEmail                String          @unique
  directorPassword             String
  directorPasswordPlain        String? // Admin goruntulemesi icin
  directorPasswordResetToken   String?
  directorPasswordResetExpires DateTime?
  directorLastLogin            DateTime?
  isActive                     Boolean         @default(true)
  createdAt                    DateTime        @default(now())
  updatedAt                    DateTime        @updatedAt
  classes                      Class[]
  schoolPayments               SchoolPayment[]

  @@index([directorEmail])
  @@index([password])
  @@map("schools")
}

model Class {
  id               String   @id @default(cuid())
  name             String
  commissionAmount Decimal  @default(0.00) @db.Decimal(10, 2)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  schoolId         String
  packageId        String?
  package          Package? @relation(fields: [packageId], references: [id])
  school           School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  orders           Order[]

  @@index([schoolId])
  @@index([packageId])
  @@map("classes")
}

model Package {
  id          String        @id @default(cuid())
  name        String
  description String?       @db.Text
  note        String?       @db.Text
  price       Decimal       @db.Decimal(10, 2)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  classes     Class[]
  orders      Order[]
  items       PackageItem[]

  @@map("packages")
}

model PackageItem {
  id        String   @id @default(cuid())
  name      String
  quantity  Int      @default(1)
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  packageId String
  package   Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@index([packageId])
  @@map("package_items")
}

model Order {
  id                 String         @id @default(cuid())
  orderNumber        String         @unique
  parentName         String
  studentName        String
  phone              String
  email              String?
  address            String?        @db.Text
  totalAmount        Decimal        @db.Decimal(10, 2)
  status             OrderStatus    @default(PAID)
  paymentMethod      PaymentMethod?
  paymentId          String?
  paymentUrl         String?
  paidAt             DateTime?
  isCorporateInvoice Boolean        @default(false)
  taxNumber          String?
  taxOffice          String?
  invoiceNo          String?
  invoiceDate        DateTime?
  invoicePdfPath     String?
  trackingNo         String?
  shippedAt          DateTime?
  deliveryPdfPath    String?
  deliveredAt        DateTime?
  deliveredBy        String?
  discountCode       String?
  discountAmount     Decimal?       @db.Decimal(10, 2)
  confirmedAt        DateTime?
  invoicedAt         DateTime?
  cancelledAt        DateTime?

  // Yeni alanlar - Kurumsal fatura ve adres
  companyTitle       String? // Firma Unvani
  studentSection     String? @db.VarChar(4) // Sube (max 4 karakter)
  deliveryAddress    String? @db.Text // Teslimat adresi (farkli adres)
  invoiceAddress     String? @db.Text // Fatura adresi
  orderNote          String? @db.Text // Siparis notu
  invoiceAddressSame Boolean @default(true) // Fatura ayni adrese mi

  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  classId            String
  packageId          String
  deliveryDocumentId String?
  cancelRequest      CancelRequest?
  class              Class             @relation(fields: [classId], references: [id])
  deliveryDocument   DeliveryDocument? @relation(fields: [deliveryDocumentId], references: [id])
  package            Package           @relation(fields: [packageId], references: [id])

  @@index([classId])
  @@index([packageId])
  @@index([orderNumber])
  @@index([status])
  @@index([createdAt])
  @@index([deliveryDocumentId], map: "orders_deliveryDocumentId_fkey")
  @@map("orders")
}

model CancelRequest {
  id           String              @id @default(cuid())
  reason       String?             @db.Text
  status       CancelRequestStatus @default(PENDING)
  processedBy  String?
  processedAt  DateTime?
  adminNote    String?             @db.Text
  refundAmount Decimal?            @db.Decimal(10, 2)
  refundedAt   DateTime?
  refundId     String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  orderId      String              @unique
  order        Order               @relation(fields: [orderId], references: [id])

  @@index([status])
  @@map("cancel_requests")
}

model SchoolPayment {
  id          String        @id @default(cuid())
  amount      Decimal       @db.Decimal(10, 2)
  description String?       @db.Text
  period      String?
  status      PaymentStatus @default(PENDING)
  paymentDate DateTime      @default(now())
  paidAt      DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  schoolId    String
  school      School        @relation(fields: [schoolId], references: [id])

  @@index([schoolId])
  @@index([paymentDate])
  @@index([status])
  @@map("school_payments")
}

model DeliveryDocument {
  id            String   @id @default(cuid())
  documentNo    String   @unique
  deliveryDate  DateTime
  receivedBy    String
  totalPackages Int
  pdfPath       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orders        Order[]

  @@index([documentNo])
  @@map("delivery_documents")
}

model Admin {
  id                   String    @id @default(cuid())
  name                 String
  email                String    @unique
  password             String
  passwordResetToken   String?
  passwordResetExpires DateTime?
  lastLogin            DateTime?
  isActive             Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([email])
  @@map("admins")
}

model RateLimitLog {
  id           String    @id @default(cuid())
  identifier   String
  attempts     Int       @default(1)
  blockedUntil DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([identifier])
  @@map("rate_limit_logs")
}

model SystemLog {
  id        String   @id @default(cuid())
  userId    String?
  userType  String?
  action    String
  entity    String?
  entityId  String?
  details   String?  @db.Text
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("system_logs")
}

model Discount {
  id          String       @id @default(cuid())
  code        String       @unique
  description String?
  type        DiscountType
  value       Decimal      @db.Decimal(10, 2)
  minAmount   Decimal?     @db.Decimal(10, 2)
  maxDiscount Decimal?     @db.Decimal(10, 2)
  validFrom   DateTime
  validUntil  DateTime
  usageLimit  Int?
  usedCount   Int          @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([code])
  @@map("discounts")
}

enum DeliveryType {
  CARGO
  SCHOOL_DELIVERY
}

enum OrderStatus {
  PAID
  PREPARING
  SHIPPED
  DELIVERED
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  CASH_ON_DELIVERY
}

enum CancelRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum PaymentStatus {
  PENDING
  PAID
}
