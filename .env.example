# ============================================================
# Okul Tedarik Sistemi - Environment Variables
# ============================================================
# Bu dosyayi .env olarak kopyalayin ve degerleri doldurun:
#   cp .env.example .env
# ============================================================

# Database (MySQL)
DATABASE_URL="mysql://user:password@localhost:3306/okul_tedarik"

# JWT Authentication
# Production'da guclu, rastgele bir secret kullanin (min 32 karakter)
# Olusturmak icin: openssl rand -base64 32
JWT_SECRET=""
JWT_EXPIRES_IN="7d"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Okul Tedarik Sistemi"

# ============================================================
# Mock API Flags
# Varsayilan olarak tum entegrasyonlar mock modda calisir.
# Gercek entegrasyon icin "false" yapin ve API anahtarlarini doldurun.
# ============================================================
USE_MOCK_PAYMENT="true"
USE_MOCK_INVOICE="true"
USE_MOCK_CARGO="true"
USE_MOCK_EMAIL="true"
USE_MOCK_SMS="true"

# ============================================================
# Entegrasyon API Anahtarlari
# Sadece mock=false ise gereklidir
# ============================================================

# Iyzico Payment Gateway
IYZICO_API_KEY=""
IYZICO_SECRET_KEY=""
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

# KolayBi E-Fatura
KOLAYBI_API_KEY=""
KOLAYBI_SECRET_KEY=""

# Aras Kargo
ARAS_CUSTOMER_CODE=""
ARAS_PASSWORD=""

# Resend Email Service (https://resend.com)
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Twilio SMS Service (https://twilio.com)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Google Gemini AI (Chatbot - opsiyonel)
GEMINI_API_KEY=""

# ============================================================
# Docker / MySQL (docker-compose.yml icin)
# ============================================================
MYSQL_ROOT_PASSWORD="root123"
MYSQL_DATABASE="okul_tedarik"
MYSQL_USER="okul_user"
MYSQL_PASSWORD="okul_pass_2024"
MYSQL_PORT="3306"
